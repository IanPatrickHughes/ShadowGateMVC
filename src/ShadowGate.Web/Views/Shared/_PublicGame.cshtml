<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/global/resources/css/grid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/global/resources/css/mainstyles.css")" rel="stylesheet" type="text/css" />
    <!--[if IE]>
        <link href="@Url.Content("~/global/resources/css/ie.css")" rel="stylesheet" type="text/css" />
    <![endif]-->
</head>
<body>
    <div id="main-container">
        <div id="game-container" class="container_12">
            @RenderBody()
        </div>
    </div>
    <!-- jQuery Common Libraries 
         * I am not using any CDN so that the application can run local on a machine not connected to the internet
    -->
    <script src="@Url.Content("~/global/resources/scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/global/resources/scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/global/resources/scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/global/resources/scripts/jquery.cookie.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/global/resources/scripts/jquery.tmpl.min.js")" type="text/javascript"></script>
    <!-- Other Libs -->
    <script src="@Url.Content("~/global/resources/scripts/lib/json2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/global/resources/scripts/lib/underscore-1.1.6.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/global/resources/scripts/lib/backbone.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/global/resources/scripts/lib/backbone-localstorage.js")" type="text/javascript"></script>
    <!-- Sound Manager -->
    <script src="@Url.Content("~/global/resources/scripts/soundmanager2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/global/resources/scripts/jquery.gamequery-0.5.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/global/resources/scripts/jquery.gamequery.soundwrapper.soundmanager2.js")" type="text/javascript"></script>
    <!-- Shadowgate Scripts -->
    <script src="@Url.Content("~/global/resources/scripts/game/shadowgate-globals.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/global/resources/scripts/game/shadowgate-levels.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/global/resources/scripts/game/shadowgate-rooms.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/global/resources/scripts/game/shadowgate-main.js")" type="text/javascript"></script>
    @if (IsSectionDefined("CustomScripts"))
    {
        @RenderSection("CustomScripts", required: false) 
    }
</body>
</html>
